{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/rust:1": {}
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "cargo build",
  "customizations": {
    "codespaces": {
      "openFiles": ["src/main.rs"]
    },
    "vscode": {
      "extensions": ["rust-lang.rust-analyzer"]
    }
  }
}
